{
    "java.project.sourcePaths": [
        "src"
    ],
    "java.project.outputPath": "bin",
    "java.project.referencedLibraries": [
        "lib/**/*.jar"
    ],
    "editor.suggest.autoTriggerButtons": false,
    // GENEL EDİTÖR AYARLARI
    "editor.suggest.enabled": false, // Öneri penceresini tamamen kapatır
    "editor.quickSuggestions": { // Yazarken çıkan hızlı önerileri kapatır
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.inlineSuggest.enabled": false, // Gri renkli satır içi önerileri (Ghost text) kapatır
    "editor.parameterHints.enabled": false, // Fonksiyon parametre ipuçlarını kapatır
    "editor.hover.enabled": false, // Mouse ile üzerine gelince çıkan bilgi kutucuğunu kapatır
    "editor.lightbulb.enabled": "off", // Hata düzeltme ampul simgesini kapatır
    // JAVA ÖZEL AYARLARI
    "java.completion.enabled": false, // Java'ya özel kod tamamlamayı kapatır
    "java.validate.enable": false, // Java hata denetimini (kırmızı alt çizgileri) kapatır
    "editor.inlayHints.enabled": "off", // Parametre isimleri gibi satır içi ipuçlarını kapatır
    "java.inlayHints.parameterNames.enabled": "none", // Java parametre isimlerini kapatır
    "editor.codeLens": false, // Kod üzerindeki referans sayaçlarını/linkleri kapatır
    "editor.guides.indentation": false, // Girinti çizgilerini kapatır
    "editor.bracketPairColorization.enabled": false, // Parantez renklendirmesini kapatır
    "editor.matchBrackets": "never", // Eşleşen parantez vurgusunu kapatır
    "breadcrumbs.enabled": false, // Üstteki dosya yolu çubuğunu kapatır
    "editor.snippetSuggestions": "none", // Snippet önerilerini kapatır
    "editor.suggest.showSnippets": false, // Öneri listesinde snippet göstermez
    "editor.wordBasedSuggestions": "off", // Kelime bazlı önerileri kapatır
    "editor.renderLineHighlight": "none", // Satır vurgulamasını kapatır
    "editor.occurrencesHighlight": "off", // Aynı kelimeyi seçince diğerlerini vurgulamayı kapatır
    "editor.selectionHighlight": false, // Seçim vurgusunu kapatır
    "editor.links": false,
    "editor.colorDecorators": false,
    "github.copilot.inlineSuggest.enable": false, // Copilot satır içi tamamlamayı kapatır
    "github.copilot.enable": {
    
    
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    },
    "vsintellicode.suggestions.enabled": false, // IntelliCode önerilerini kapatır
    "editor.inlineSuggest.showToolbar": "never", // Öneri araç çubuğunu gizler
    "editor.suggest.showComments": false, // Yorumlarda öneri göstermeyi kapatır
    "editor.comments.enabled": false // Genel yorum özelliklerini kısıtlar
}